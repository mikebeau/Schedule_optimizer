                            android:layout_marginRight="6dp"
                            android:layout_marginTop="605dp"
                            android:gravity="center"
                            android:text="@string/time5pm"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/time6pmTextView"
                            android:layout_width="wrap_content"
