                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="6dp"
                    android:text="Fri"
                    android:textColor="@color/scheduleText"
                    android:textSize="15dp"
                    android:textStyle="bold" />


