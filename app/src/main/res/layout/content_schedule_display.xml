                            android:layout_alignParentRight="true"
                            android:layout_marginRight="6dp"
                            android:layout_marginTop="665dp"
                            android:gravity="center"
                            android:text="@string/time6pm"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/time7pmTextView"
