<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUtiful Schedule"
        android:id="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.158" />

    <Button
        android:id="@+id/openInfo"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:fadingEdge="horizontal|vertical"
        android:text="Create Schedule" />

    <Button
        android:id="@+id/openSavedSchedule"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_below="@id/openInfo"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:fadingEdge="horizontal|vertical"
        android:text="Saved Schedules" />

    <Button
    android:id="@+id/launchBtn"
    android:layout_width="250dp"
    android:layout_height="100dp"
    android:layout_below="@id/openSavedSchedule"
    android:layout_centerHorizontal="true"
    android:layout_marginStart="0dp"
    android:layout_marginTop="50dp"
    android:layout_marginEnd="0dp"
    android:layout_marginBottom="0dp"
    android:fadingEdge="horizontal|vertical"
    android:text="Launch test" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result ..."
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:layout_below="@id/openSavedSchedule"
        android:textSize="17sp"/>
</RelativeLayout>